{
  "name": "cra-build-watch",
  "version": "0.0.0-development",
  "description": "A script for create-react-app that writes development builds to the disk",
  "main": "scripts/index.js",
  "bin": "bin/cra-build-watch.js",
  "files": [
    "bin",
    "scripts",
    "utils"
  ],
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "test": "jest",
    "cm": "npx git-cz",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "{{bin,scripts,utils}/**/*.{js,json},*.{js,json}}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "es5",
    "singleQuote": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Nargonath/cra-build-watch.git"
  },
  "bugs": {
    "url": "https://github.com/Nargonath/cra-build-watch/issues"
  },
  "homepage": "https://github.com/Nargonath/cra-build-watch#readme",
  "author": "Nargonath <jonas.pauthier@gmail.com>",
  "keywords": [
    "create-react-app",
    "react",
    "webpack",
    "development-environment",
    "build",
    "reactjs"
  ],
  "license": "MIT",
  "peerDependencies": {
    "react-scripts": ">= 1.0.x"
  },
  "devDependencies": {
    "@commitlint/cli": "8.1.0",
    "@commitlint/config-conventional": "8.1.0",
    "@dixeed/eslint-config": "2.0.0",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "6.1.0",
    "husky": "3.0.4",
    "jest": "^24.8.0",
    "lint-staged": "9.2.1",
    "prettier": "1.18.2"
  },
  "dependencies": {
    "cross-spawn": "6.0.5",
    "fs-extra": "^8.1.0",
    "html-webpack-plugin": "^3.2.0",
    "import-cwd": "3.0.0",
    "meow": "5.0.0",
    "ora": "3.4.0",
    "semver": "^6.3.0"
  }
}
